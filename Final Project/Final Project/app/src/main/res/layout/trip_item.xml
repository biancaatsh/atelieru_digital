<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:id="@+id/parent_layout_trip_item">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardview"
        app:cardBackgroundColor="#E8E8E8"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/trip_image"
                android:src="@drawable/rome"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/trip_image"
                android:padding="2dp"
                android:text="Just for test"
                android:textColor="#000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:padding="2dp"
                android:id="@+id/trip_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trip_name"
                android:layout_toRightOf="@id/trip_image"
                android:text="Just for test purposes"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
                />

            <TextView
                android:padding="2dp"
                android:id="@+id/trip_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trip_destination"
                android:layout_toRightOf="@id/trip_image"
                android:text="0.0/0.0"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</RelativeLayout>